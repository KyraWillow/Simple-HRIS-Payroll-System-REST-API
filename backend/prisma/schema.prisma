generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  HR_ADMIN
  EMPLOYEE
}

enum Status {
  PRESENT
  LATE
  ABSENT
}

enum StatusPayroll {
  DRAFT
  PAID
}

model Users {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  password    String
  role        Role          @default(EMPLOYEE)
  base_salary Decimal       @default(1000000)
  join_date   DateTime      @default(now())
  attendances Attendances[]
  payroll     Payrolls[]
}

model Attendances {
  id       Int      @id @default(autoincrement())
  userId   Int
  users    Users    @relation(fields: [userId], references: [id])
  date     DateTime
  time_in  DateTime
  time_out DateTime
  status   Status
}

model Payrolls {
  id           Int           @id @default(autoincrement())
  userId       Int
  users        Users         @relation(fields: [userId], references: [id])
  month        Int
  year         Int
  basic_salary Decimal
  deductions   Decimal
  net_salary   Decimal
  status       StatusPayroll
}
